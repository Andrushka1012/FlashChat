<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_marginTop="35dp"
    android:layout_marginRight="65dp"
    android:layout_gravity="end"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <View
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:background="@drawable/to_me_first"
        >
    </View>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Hello" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_photo_message"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        />

    <View
        android:layout_width="176dp"
        android:layout_height="20dp"
        android:background="@drawable/to_me_bot"
        />
</LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/iv_photo"
        android:layout_gravity="end"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/andruszka_photo"
        />


</FrameLayout>